<h3>Word Definer</h3>
<form action="/" method="post">
  <div class="form-group">
    <label for="key">Word</label>
    <input id="key" name="key" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="definition">Definition</label>
    <input id="definition" name="definition" class="form-control" type="text">
  </div>
  <button type="submit" class="btn-info">Enter</button>
</form>

<%@list_words.each do |word|%>
  <h4><a href="/words/<%= word.id%>"><%= word.key%></a></h4>
  <form action="/words/<%= word.id %>" method="POST">
    <div class="form-group">
      <label for="definition_two">Add Additional Definition</label>
      <input id="definition_two" name="definition_two" class="form-control" type="text">
    </div>
    <button type="submit" class="btn-info">Add Definition</button>
  </form>
<% end %>
<form action="/list" method="post">
<button type="submit" class="btn-info">Clear List</button>
</form>
